<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_info">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_slider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sv_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tittletext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="Ð’Ð°ÐºÑ†Ð¸Ð½Ð°Ñ†Ñ–Ñ—"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_passport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/e_ukraine_regular"
                android:text="UA AA 658199"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@+id/tv_tittletext" />

            <ImageView
                android:id="@+id/iv_copy_passport"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_copy"
                app:layout_constraintBottom_toBottomOf="@+id/tv_passport_number"
                app:layout_constraintStart_toEndOf="@+id/tv_passport_number"
                app:layout_constraintTop_toTopOf="@+id/tv_passport_number" />

            <TextView
                android:id="@+id/tv_update_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_marquee"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/e_ukraine_regular"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="15dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="ÐŸÐ°ÑÐ¿Ð¾Ñ€Ñ‚ Ð¾Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾ 24.09.2025 ÐŸÐ°ÑÐ¿Ð¾Ñ€Ñ‚ Ð¾Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾ 24.09.2025"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_number" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@null"
                android:fontFamily="@font/e_ukraine_regular"
                android:gravity="center"
                android:text="Ð£ Ñ†ÑŒÐ¾Ð³Ð¾ ÑƒÐ»ÑŽÐ±Ð»ÐµÐ½Ñ†Ñ Ñ‰Ðµ Ð½ÐµÐ¼Ð°Ñ” Ð²Ð°ÐºÑ†Ð¸Ð½Ð°Ñ†Ñ–Ð¹ ðŸ˜¥"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_update_datetime"/>

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:background="@drawable/bg_vaccinnation_top"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@+id/tv_update_datetime">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="ÐÐ°Ð·Ð²Ð° Ñ‚Ð° ÑÐµÑ€Ñ–Ñ:"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="Ð”Ð°Ñ‚Ð°:"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="Ð’ÐµÑ‚ÐºÐ»Ñ–Ð½Ñ–ÐºÐ°"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="Name and serial number "
                        android:textColor="@color/gray_hint_text"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="Date"
                        android:textColor="@color/gray_hint_text"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/e_ukraine_regular"
                        android:text="Vet"
                        android:textColor="@color/gray_hint_text"
                        android:textSize="10sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_vaccinations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:paddingTop="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@drawable/bg_vaccinnation_bottom"
                app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_right"
                app:layout_constraintStart_toStartOf="@+id/guideline_vertical_left"
                app:layout_constraintTop_toBottomOf="@+id/ll_main"/>

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_vaccinations" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.07" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_vertical_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.93" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />
</androidx.constraintlayout.widget.ConstraintLayout>